{
  "name": "@sozialhelden/ac-format",
  "version": "7.4.2",
  "description": "",
  "keywords": [],
  "main": "dist/index.umd.js",
  "module": "dist/index.es5.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Henrik Hinrichs <henrik.hinrichs@framefield.com>, Sebastian Felix Zappe <sebastian@felixzappe.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/sozialhelden/ac-format"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame -e 'src/typings/*' 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup -c rollup.config.ts && rimraf compiled && typedoc src typings --options typedoc.json --out dist/docs --json dist/typedoc-output.json && npx ts-node ./tools/generate-overview.tsx > dist/docs/attributes.html",
    "start": "tsc -w & rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "yarn run lint && yarn run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "format": "tslint --fix src/**/*.ts",
    "prettier": "npx prettier --fix src/**/*.ts test/**/*.ts --write --single-quote",
    "deploy": "yarn build && yarn test:prod && yarn publish --access public"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx}": [
      "prettier --write --single-quote"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 65,
        "functions": 90,
        "lines": 75,
        "statements": 75
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  },
  "devDependencies": {
    "@babel/plugin-transform-destructuring": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@types/jest": "^24.0.16",
    "@types/js-quantities": "^1.6.2",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "babel-plugin-ttag": "^1.5.1",
    "babel-preset-env": "^1.7.0",
    "colors": "^1.1.2",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.8.2",
    "prompt": "^1.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "replace-in-file": "^4.1.1",
    "rimraf": "^2.6.1",
    "rollup": "^1.16.7",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^15.13.18",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.119",
    "@types/prop-types": "^15.5.8",
    "intersperse": "^1.0.0",
    "js-quantities": "^1.7.4",
    "lodash": "^4.17.11",
    "marked": "^0.7.0",
    "react-style-tag": "^2.0.1",
    "simpl-schema": "^1.5.0",
    "ttag": "^1.5.1",
    "yarn": "^1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
